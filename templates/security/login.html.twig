{% extends 'base.html.twig' %}

{% block title %}
	{{"Connexion"}}
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				{{"Vous êtes connecté en tant que"}}
				{{ app.user.email }},
				<a href="{{ path('app_logout') }}">{{"Se déconnecter"}}</a>
			</div>
		{% endif %}
		<div class="row justify-content-center mt-4">
			<div class="col col-lg-4 col-md-6 col-sm-8 col-8">
				<form class="form" id="form-connexion">

					<h1>{{"Connexion"}}</h1>
					<label class="label" for="">{{"Email"}}</label>
					<input type="email id mt-2" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Entrez votre identifiant" autocomplete="email" required autofocus>


					<label class="label" for="connexion">{{"Mot de passe"}}</label>
					<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrez votre mot de passe" autocomplete="current-password" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me">
							{{"Se souvenir de moi"}}
						</label>
					</div>
					<button class="btn btn-success mt-3 mb-5" type="submit">
						{{"se connecter"}}
					</button>
				</form>
			</div>
		</div>

	{% endblock %}
