{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-form">
		<div class="row">
			<div class="offset-1 col-11 offset-md-2 col-md-8 offset-lg-3 col-lg-6">
		
					<h1>Formulaire de contact</h1>
					<br>

					{{ form_start(form) }}

					<div class="form-group">
						{{ form_label(form.email, 'E-mail') }}
						{{ form_widget(form.email, {'attr': {'class': 'form-control email', 'placeholder': 'Entrez votre email', 'maxlength': 30}}) }}
						{{ form_errors(form.email) }}
					</div>

					<div class="form-group">
						{{ form_label(form.title, 'Titre') }}
						{{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre titre', 'maxlength': 80}}) }}
						{{ form_errors(form.title) }}
					</div>

					<div class="form-group">
						{{ form_label(form.description, 'Description') }}
						{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre description', 'cols': 40, 'rows': 4, 'maxlength': 80}}) }}
						{{ form_errors(form.description) }}
					</div>

					<div class="form-group">

						{{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}, 'label': 'Valider'}) }}
					</div>
					{{ form_end(form) }}
				
			</div>
		</div>
	</div>
{% endblock %}
